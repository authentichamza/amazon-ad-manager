<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Keywords</h1>
    <% if @campaign.present? %>
    <%= link_to 'Back to Ad Groups', campaign_ad_groups_path(@campaign), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <% else %>
      <%= link_to 'Back to Campaigns', campaigns_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <% end %>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full divide-y-2 divide-gray-200 bg-white text-sm">
      <thead class="">
        <tr>
          <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
            Id
          </th>
          <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
            Text
          </th>
          <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
            bid
          </th>
          <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
            Match Type
          </th>
          <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
            Spent
          </th>
          <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
            Sales
          </th>
          <th class="px-4 py-2"></th>
        </tr>
      </thead>

      <tbody class="divide-y divide-gray-200">
        <%= render @keywords %>
      </tbody>
    </table>
  </div>
</div>
