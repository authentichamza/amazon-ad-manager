<tr id="<%= dom_id campaign %>" class= 'text-center'>
  <td class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
    <%= campaign.id %></td>
  <td class="whitespace-nowrap px-4 py-2 text-gray-700"><%= campaign.name %></td>
  <td class="whitespace-nowrap px-4 py-2 text-gray-700"><%= campaign.start_date %></td>
  <td class="whitespace-nowrap px-4 py-2 text-gray-700"><%= number_to_currency(campaign.budget) %></td>
  <td class="whitespace-nowrap px-4 py-2">
    <% if action_name != "show" %>
      <%= link_to "Show Ad Groups", campaign_ad_groups_path(campaign), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <% end %>
  </td>
</tr>
